{
    "html.autoClosingTags": true,

    "[go]": {
	    "coc.preferences.formatOnSave": true
    },

    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    }
}
