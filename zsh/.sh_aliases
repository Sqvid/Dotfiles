# Custom aliases
alias bsnap='sudo btrbk -v snapshot --preserve-snapshots'
alias bsync='sudo btrbk -v resume'
alias ccc='gcc -g -std=c99 -Wpedantic -Wall -Wextra'
alias cpl='g++ -g -std=c++17 -Wpedantic -Wall -Wextra'
alias ll='ls -lhv'
alias please='sudo $(fc -ln -1)'
alias rngr='source ranger'
alias rsn='sudo reboot now'
alias sdn='sudo poweroff now'
alias tarc='tar -czvf'
alias tarx='tar -xzvf'
alias umr='udiskie-umount -delaF'
alias vkl='vkpurge list'
alias xbu='sudo xbps-install -Svu'
alias xbuy='sudo xbps-install -Svuy'

# Program defaults
alias du='du -h'
alias gdb='gdb --tui'
alias grep='grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox}'
alias ls='ls --color=always'
alias zathura='zathura --fork'

# Git aliases
alias ga='git add'
alias gb='git branch'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gch='git checkout'
alias gd='git diff'
alias gf='git fetch'
alias gfa='git fetch --all'
alias git='hub'
alias gl='git log --graph'
alias gla='git log --all --graph'
alias gpl='git pull'
alias groot='cd $(git rev-parse --show-toplevel) && pwd'
alias gsh='git show'
alias gss='git status'
alias gst='git stash push'
alias gstp='git stash pop'
alias gsw='git switch'
